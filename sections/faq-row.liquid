{% schema %}
  {
    "name": "Faq row",
    "settings": [
      {
        "type": "checkbox",
        "id": "page_title_enable",
        "label": "Show page title"
      },
      {
        "type": "checkbox",
        "id": "page_content_enable",
        "label": "Show page content"
      },
      {
        "type": "text",
        "id": "col_left_title",
        "label": "Category title for left column"
