{% include 'breadcrumbs' %}
{% assign ss = section.settings %}
<section class="accordion-container-faq">
    <div class="accordion-faq">
			{%- if section.settings.page_title_enable or section.settings.page_content_enable -%}
        <div class="accordion-header-faq">
            <h3 class="accordion-title-faq">{{ ss.faq_title }}</h3>
        </div>
			{% endif %}

{% schema %}
{
	"name": "FAQ page top",
	"settings": [
		{
			"type": "checkbox",
			"id": "page_title_enable",
			"label": "Show page title"
		},
		{
			"type": "checkbox",
			"id": "page_content_enable",
			"label": "Show page content"
		},
		{
			"type": "text",
			"id": "faq_title",
			"label": "Page Title"
		}
	]
}